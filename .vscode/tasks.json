{
    "//": "VS Code tasks for local development. Use pwsh everywhere and ${workspaceFolder} instead of ${cwd}.",
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1 -Task Clean -Verbose"
        },
        {
            "label": "Analyze",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1 -Task Analyze -Verbose"
        },
        {
            "label": "Pester",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1 -Task Pester -Verbose",
            "problemMatcher": "$pester"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1 -Task Test -Verbose",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$pester"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1 -Task Build -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Publish",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1 -Task Publish -Verbose"
        }
    ]
}
